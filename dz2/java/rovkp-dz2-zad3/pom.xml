        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>hr.rovkp.vinko.dz2.zad3.ChainingMapReduce</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
